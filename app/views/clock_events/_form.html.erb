<% type ||= 'in' %>
<% btn_label ||= 'Clock In' %>
<% btn_class ||= 'btn btn-success' %>
<% clock_event_page ||= false %>

<%= form_for [clock_event, @clock] do |f| %>
  <%= f.hidden_field :clock_event_page, value: 1 if clock_event_page %>
  <%= f.hidden_field :clock_event_id, value: clock_event.id %>
  <%= f.hidden_field :clock_type, value: type %>
  <%= f.submit btn_label , class: btn_class %>
<% end %>  